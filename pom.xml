			<version>${felix.http.servlet-api.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.http.bridge</artifactId>
			<version>${felix.http.bridge.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
